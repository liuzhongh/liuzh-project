<?xml version="1.0" encoding="utf-8"?>

<com.insthub.ecmobile.component.SpecificationCell xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center" android:minWidth="45dp"
               android:background="#ffffff">

<TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/specification_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:text="" android:layout_weight="0.5" android:gravity="center_vertical|left"/>

    <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/specification_value"/>
    <View android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#999999"/>


</com.insthub.ecmobile.component.SpecificationCell>