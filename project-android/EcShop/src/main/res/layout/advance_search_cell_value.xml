<?xml version="1.0" encoding="utf-8"?>

<com.insthub.ecmobile.component.AdvanceSearchValueCell xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:orientation="horizontal"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:gravity="center">

    <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/specification_value_text_one"

                  android:textColorHighlight="#ff0000"
                  android:textSize="14dp"
                  android:textColor="@color/spec_text_color"
                  android:background="@drawable/item_info_buy_kinds_btn_bg_grey"
                  android:padding="5dp"
                  android:text="red" android:gravity="center" />

        <ImageView
                android:id="@+id/specification_value_img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_info_buy_kinds_active_icon"
                android:layout_gravity="right|top"
                android:visibility="gone"/>

    </FrameLayout>


    <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/specification_value_text_two"

                  android:textColorHighlight="#ff0000"
                  android:textColor="@color/spec_text_color"
                  android:background="@drawable/item_info_buy_kinds_btn_bg_grey"
                  android:textSize="14dp"
                  android:padding="5dp"
                  android:text="blue" android:gravity="center" />

        <ImageView
                android:id="@+id/specification_value_img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_info_buy_kinds_active_icon"
                android:layout_gravity="right|top"
                android:visibility="gone"/>
    </FrameLayout>
</com.insthub.ecmobile.component.AdvanceSearchValueCell>