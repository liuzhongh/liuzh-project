<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:src="@drawable/tuitional_bg"
               android:visibility="invisible"/>



    <ImageView android:layout_height="260dp"
               android:layout_width="121dp"
               android:src="@drawable/tuitional_img_2_2"
               android:layout_marginTop="152dp" android:layout_gravity="center_horizontal|left"
               android:layout_marginLeft="125dp"/>

    <ImageView android:layout_height="232dp"
               android:layout_width="122dp"
               android:src="@drawable/tuitional_img_2_3"
               android:layout_marginTop="190dp" android:layout_gravity="center_horizontal|left"
               android:layout_marginLeft="77dp"/>
    <ImageView android:layout_height="232dp"
               android:layout_width="122dp"
               android:src="@drawable/tuitional_img_2_4"
               android:layout_marginLeft="127dp" android:layout_marginTop="30dp"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/two_main_os"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDy="1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/special_app_for_cellphone"
        android:textColor="#ffffff"
        android:textSize="16dp" 
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDy="1"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/tuitional_carousel_btn" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/tuitional_carousel_active_btn" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/tuitional_carousel_btn" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/tuitional_carousel_btn" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/tuitional_carousel_btn" />
    </LinearLayout>

</FrameLayout>