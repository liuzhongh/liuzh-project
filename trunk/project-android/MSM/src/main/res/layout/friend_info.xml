			            android:layout_width="100dip"
			            android:layout_height="wrap_content"
			            android:paddingLeft="5dip"
			            android:text="用户名"
			            android:textColor="@color/p_text1"
			            android:textSize="18sp" />
			
			        <TextView
			            android:id="@+id/EnterpriseContactDlm"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="zhangs"/>
			        <EditText
			            android:id="@+id/comment"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="张三"
			            android:visibility="gone"/>
			    </LinearLayout>
			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1px"
			        android:background="@drawable/shape_line" />
			
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="100dip"
			            android:layout_height="wrap_content"
			            android:paddingLeft="5dip"
			            android:text="所属机构"
			            android:textColor="@color/p_text1"
			            android:textSize="18sp" />
			
			        <TextView
			            android:id="@+id/EnterpriseContactDepartMent"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="企信通"/>
			        <EditText
			            android:id="@+id/comment"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="张三"
			            android:visibility="gone"/>
			    </LinearLayout>
				<View
			        android:layout_width="fill_parent"
			        android:layout_height="1px"
			        android:background="@drawable/shape_line" />
			
			   <LinearLayout
			        android:id="@+id/change_comment"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="100dip"
			            android:layout_height="wrap_content"
			            android:paddingLeft="5dip"
			            android:text="手机号"
			            android:textColor="@color/p_text1"
			            android:textSize="18sp" />
			
			        <TextView
			            android:id="@+id/EnterpriseContactMobile"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="1523112344"/>
			        <EditText
			            android:id="@+id/comment"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="张三"
			            android:visibility="gone"/>
			    </LinearLayout>
			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1px"
			        android:background="@drawable/shape_line" />
			
			   <LinearLayout
			        android:id="@+id/change_comment"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="100dip"
			            android:layout_height="wrap_content"
			            android:paddingLeft="5dip"
			            android:text="邮箱"
			            android:textColor="@color/p_text1"
			            android:textSize="18sp" />
			
			        <TextView
			            android:id="@+id/EnterpriseContactEmail"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="simgsg@qq.com"/>
			        <EditText
			            android:id="@+id/comment"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dip"
			            android:layout_weight="1.0"
			            android:ellipsize="end"
			            android:singleLine="true"
			            android:textColor="@color/p_text2"
			            android:textSize="18sp"
			            android:text="张三"
			            android:visibility="gone"/>
			    </LinearLayout>
			</LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>