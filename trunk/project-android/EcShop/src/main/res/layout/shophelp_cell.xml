<?xml version="1.0" encoding="utf-8"?>
<com.insthub.ecmobile.component.ShopHelpCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/shophelp_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/body_cont_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/shophelp_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="0.8"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/item_info_arrow_icon" />
    </LinearLayout>

</com.insthub.ecmobile.component.ShopHelpCell>